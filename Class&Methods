#Lecture 4 Knowledge Recap

#Base class
class Dog:
    def __init__(self, color, eye_color, height, length, weight):
        self.color = color
        self.eye_color = eye_color
        self.height = height
        self.length = length
        self.weight = weight

    # Method
  def sit(self):
        print("The dog sits.")

    def lay_down(self):
        print("The dog lays down.")

    def shake(self):
        print("The dog shakes paws.")

    def come(self):
        print("The dog comes.")

#Object Bobby
bobby = Dog(color="Yellow", eye_color="Brown", height=17, length=35, weight=24)

#Properties
print(f"Color: {bobby.color}")
print(f"Eye Color: {bobby.eye_color}")
print(f"Height: {bobby.height} in")
print(f"Length: {bobby.length} in")
print(f"Weight: {bobby.weight} pounds")

bobby.sit()
bobby.lay_down()
bobby.shake()
bobby.come()
